<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/dark_six</item>
        <item name="textAppearanceTitle">@style/TextAppearance.H1.Title</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.H1.Title">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <attr name="textAppearanceTitle" format="reference" />

</resources>
